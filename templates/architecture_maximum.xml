<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<architecture name="IKA">
	<registers>
		<!-- %は特殊文字として扱われるためとしてエスケープする -->
		<intRegs num="32" prefix="%%g"/>
		<floatRegs num="32" prefix="%%f"/>
		<constFloatRegs num="16"/>
		<zeroReg index="0"/>
		<frameReg index="1"/>
		<heapReg index="2"/>
		<oneReg index="28"/>
		<minusOneReg index="29"/>
		<!-- indexを""にすると汎用レジスタとは別に用意されたレジスタが使われる -->
		<linkReg index=""/>
	</registers>
	<RAM size="8.0" />
	<comment text="!"/>

	<!-- constTableType -->
	<!-- ヒープ初期化部分と命令データを別ファイルに書き込む -->
	<binary endian="LITTLE" constTableType="writeSize" tag="0xffFFffFF" addressing="word" rom_addressing="word" direction=""/>
	
	<!-- 固定する機能（命令形式など）はこのファイルには書かない（ミスリードになるから） -->
	<!-- op, functともに６ビット(0 ~ 63) -->
	<instructions forward="true">
		<CONST>
			<SPECIAL value="0"/>
			<FPI value="1"/>
			<IO value="2"/>
		</CONST>
		<!-- ireg <- op ireg -->
		<MOV name="mov" op="SPECIAL" funct="0" explain="値のコピー"/>

		<!-- regi op regi -->
		<ADD name="add" op="SPECIAL" funct="1" explain="整数同士の足し算"/>
		<SUB name="sub" op="SPECIAL" funct="2" explain="整数同士の引き算"/>
		<MUL name="mul"  op="SPECIAL" funct="3" explain="整数同士の掛け算"/>
		<DIV name="div"  op="SPECIAL" funct="4" explain="整数同士の割り算"/>
		<SLL use="false" name="sll" op="SPECIAL" funct="000" explain="左シフト"/>
		<SLA use="false" name="sla" op="SPECIAL" funct="002" explain="左シフト"/>
		<SRL use="false" name="srll" op="SPECIAL" funct="7" explain="論理右シフト"/>
		<SRA use="false" name="srl" op="SPECIAL" funct="8" explain="算術右シフト"/>
		<SHIFT use="false" name="shiftr" op="ALU" funct="8" explain="算術右シフト（符号に応じて右・左が変わる）"/>
		<AND use="false" name="and" op="SPECIAL" funct="044" explain="論理積"/>
		<OR use="false" name="or" op="SPECIAL" funct="045" explain="論理和"/>
		<NOR use="false" name="nor" op="SPECIAL" funct="033" explain="論理和"/>
		<XOR use="false" name="xor" op="SPECIAL" funct="12" explain="排他的論理和"/>
		<NOT use="false" name="not" op="SPECIAL" funct="11" explain="論理否定"/>

		<!-- regi op imm -->
		<ADDI name="addi" op="3" explain="整数同士の足し算(即値)"/>
		<SUBI name="subi" op="4" explain="整数同士の引き算(即値)"/>
		<MULI name="muli" op="5" explain="整数同士の掛け算(即値)"/>
		<DIVI name="divi" op="6" explain="整数同士の割り算(即値)"/>
		<SLLI name="slli" op="7" explain="論理左シフト(即値)"/>
		<SLAI use="false" name="slai" op="8" explain="算術左シフト(即値)"/>
		<SRLI use="false" name="srlli" op="9" explain="論理右シフト(即値)"/>
		<SRAI name="srli" op="052" explain="算術右シフト(即値)"/>
		<SHIFTI name="shift" op="0x3D" explain="算術シフト（符号に応じて右・左が変わる）"/>
		<ANDI use="false" name="andi" op="11" explain="論理積(即値)"/>
		<ORI use="false" name="ori" op="12" explain="論理和(即値)"/>
		<NORI use="false" name="nori" op="50" explain="論理和(即値)"/>
		<XORI use="false" name="xori" op="13" explain="排他的論理和(即値)"/>

		<!-- regf op regf -->
		<FADD name="fadd" op="FPI" funct="0" explain="浮動小数点数同士の足し算"/>
		<FSUB name="fsub" op="FPI" funct="1" explain="浮動小数点数同士の引き算"/>
		<FMUL name="fmul" op="FPI" funct="2" explain="浮動小数点数同士の掛け算"/>
		<FMULN use="false" name="fmuln" op="FPA" funct="0x02" explain="浮動小数点数同士の掛け算*-1"/>
		<FINVN use="false" name="finvn" op="FPA" funct="0x02" explain="浮動小数点数の逆数*-1"/>
		<FDIV name="fdiv" op="FPI" funct="3" explain="浮動小数点数同士の割り算"/>

		<!-- op regf -->
		<FINV use="false" name="finv" op="FPI" funct="4" explain="浮動小数点数の逆数"/>
		<FSQRT name="fsqrt" op="FPI" formAsm="FRD, FRS" funct="4" explain="浮動小数点数の平方根"/>
		<FABS use="false" name="fabs" op="FPI" formAsm="FRD, FRS" funct="005" explain="浮動小数点数の絶対値"/>
		<FMOV name="fmov" op="FPI" formAsm="FRD, FRS" funct="5" explain="memcpy"/>
		<FNEG name="fneg" op="FPI" formAsm="FRD, FRS" funct="6" explain="浮動小数点数の符号反転"/>
		<FLOOR name="floor" op="FPI" funct="9" explain="浮動小数点数同士の割り算"/>
		<!-- 使わない方が逆に最適化されやすくなって発行命令数は小さくなる -->
		<FSIN use="false" name="fsin" op="FPI" funct="10" explain="正弦"/>
		<FCOS use="false" name="fcos" op="FPI" funct="11" explain="余弦"/>
		<FTAN use="false" name="ftan" op="FPI" funct="12" explain="正接"/>
		<FATAN use="false" name="fatan" op="FPI" funct="13" explain="逆正接"/>

		<!-- ireg <- op ireg-->
		<ITOF name="itof" op="FPI" funct="14" explain="int_of_float"/>
		<IMOVF name="imvf" op="FPI" funct="15" explain="memcpy"/>

		<!-- freg <- op ireg-->
		<FTOI name="ftoi" op="FPI" funct="16" explain="float_of_int"/>
		<FMOVI name="fmvi" op="FPI" funct="17" explain="memcpy"/>

		<!-- SET -->
		<SETLO name="mvlo" op="8" explain="整数レジスタ下位16ビットに即値代入"/>
		<SETHI name="mvhi" op="9" explain="整数レジスタ上位16ビットに即値代入"/>
		<FSETLO name="fmvlo" op="10" explain="浮動小数レジスタ下位16ビットに即値代入"/>
		<FSETHI name="fmvhi" op="11" explain="浮動小数レジスタ上位16ビットに即値代入"/>

		<!-- branch -->
		<BRANCH name="jmp" op="12" explain="無条件分岐"/>
		<BEQ name="jeq" op="13" addressMode="relative" explain="条件分岐(=)"/>
		<BNE name="jne" op="14" addressMode="relative" explain="条件分岐(＜＞)"/>
		<BLT name="jlt" op="15" addressMode="relative" explain="条件分岐(＜)"/>
		<BLE name="jle" op="16" addressMode="relative" explain="条件分岐(＜=)"/>
		<BGT name="jgt" op="17" addressMode="relative" explain="条件分岐(＞)"/>
		<BGE name="jge" op="18" addressMode="relative" explain="条件分岐(＜=)"/>

		<!-- branch float -->
		<FBEQ name="fjeq" op="19" addressMode="relative" explain="浮動小数の条件分岐(=)"/>
		<FBNE name="fjne" op="20" addressMode="relative" explain="浮動小数の条件分岐(＜＞)"/>
		<FBLT name="fjlt" op="21" addressMode="relative" explain="浮動小数の条件分岐(＜)"/>
		<FBLE name="fjle" op="22" addressMode="relative" explain="浮動小数の条件分岐(＜=)"/>
		<FBGT name="fjgt" op="23" addressMode="relative" explain="浮動小数の条件分岐(＞)"/>
		<FBGE name="fjge" op="24" addressMode="relative" explain="浮動小数の条件分岐(＞=)"/>

		<!-- jmp, call, return -->
		<JMPREG name="b" op="SPECIAL" funct="5" explain="レジスタの値へジャンプ"/>

		<JMP_LNK use="false" name="jal" op="41" explain="リンクレジスタを退避してラベルへジャンプ"/>
		<JMPREG_LNK use="false" name="jarl" op="SPECIAL" funct="18" explain="リンクレジスタを退避してレジスタの値へジャンプ"/>

		<CALL name="call" op="25" explain="関数呼び出し"/>
		<CALLREG name="callR" op="SPECIAL" funct="7" explain="クロージャ呼び出し"/>
		<RETURN name="return" op="26" explain="関数呼び出しから返る"/>

		<!-- memory access -->
		<ST name="st" op="27" explain="整数ストア"/>
		<LD name="ld" op="28" explain="整数ロード"/>
		<FST name="fst" op="SPECIAL" funct="8" explain="浮動小数ストア"/>
		<FLD name="fld" op="SPECIAL" funct="9" explain="浮動小数ロード"/>
		<STI name="sti" op="29" explain="整数ストア(即値)"/>
		<LDI name="ldi" op="30" explain="整数ロード(即値)"/>
		<FSTI name="fsti" op="31" explain="浮動小数ストア(即値)"/>
		<FLDI name="fldi" op="32"  explain="浮動小数ロード(即値)"/>

		<!-- I/O -->
		<INPUTBYTE name="input" formAsm="IRD" op="IO" funct="000" explain="１バイトを整数レジスタ入力"/>
		<INPUTWORD use="false" name="inputw" op="IO" funct="010" explain="4バイトを整数レジスタに入力"/>
		<INPUTFLOAT use="false" name="inputf" op="IO" funct="020" explain="4バイトを浮動小数レジスタ入力"/>
		<OUTPUTBYTE name="output" op="IO" funct="001" explain="下位１バイトを出力"/>
		<OUTPUTWORD use="false" name="outputw" op="IO" funct="011" explain="整数レジスタ4バイトを出力"/>
		<OUTPUTFLOAT use="false" name="outputf" op="IO" funct="021" explain="浮動小数レジスタ4バイトを出力"/>

		<!-- others -->
		<HALT name="halt" op="SPECIAL" funct="10" explain="プログラム終了"/>

		<!-- mnemonic -->
		<mnemonics>
			<NOP name="nop" formAsm="">
				<inst command="&quot;add\t%%g0, %%g0, %%g0&quot;"/>
			</NOP>
			<MOV name="mov" formAsm="IRT, IRS">
				<inst command="&quot;add\t%%g%d, %%g%d, %%g0&quot;, rt, rs"/>
			</MOV>
			<NOT formAsm="IRT, IRS">
				<inst command="&quot;nor\t%%g%d, %%g%d, %%g0&quot;, rt, rs, rs" />
			</NOT>
			<NEG name="neg" formAsm="IRT, IRS">
				<inst command="&quot;sub\t%%g%d, %%g0, %%g%d&quot;, rt, rs"/>
			</NEG>
			<SETL name="setL" formAsm="IRS, LABEL">
				<inst useLabel="true" command="&quot;addi\t%%g%d, %%g0, 0&quot;, rs"/>
			</SETL>
			<!-- fset %f0, 0.1 -->
			<!-- Dはdouble型の即値を表す -->
			<FSET name="fset" formAsm="FRS, FLOAT">
				<inst command="&quot;fmvhi\t%%f%d, %d&quot;, rs, gethi(d)"/>
				<inst command="&quot;fmvlo\t%%f%d, %d&quot;, rs, getlo(d)"/>
			</FSET>
		</mnemonics>
	</instructions>
</architecture>
