		return filter(lambda inst: isUse(inst["type"]) and getOp(inst["type"]) == op, instInfo)

	def getInstsWithoutConstOp():
		return filter(lambda inst: isUse(inst["type"]) and getInst(inst["type"]).get("op", "0").isdigit(), instInfo)

